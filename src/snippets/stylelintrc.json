{
  "extends": "stylelint-config-standard",
  "rules": {
    "color-hex-case": "lower",
    "indentation": 4,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "@extend",
          "@import",
          "@mixin",
          "ignores"
        ]
      }
    ],
    "number-leading-zero": null,
    "unit-whitelist": [
      "em",
      "rem",
      "s"
    ]
  }
}