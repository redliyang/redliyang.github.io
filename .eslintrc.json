{
    "extends": "airbnb-base",
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "jquery": true
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}