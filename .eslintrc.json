{
    "extends": "standard",
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node":true
    },
    "globals": {
        "vue": true,
        "$": true,
        "jQuery": true
    },
    "rules": {
        "no-var": "error",
        "init-declarations": 2,
        "quotes": ["error", "single"
            ],
        "semi": ["error", "never"
            ],
        "no-extra-semi": "error",
        "linebreak-style": ["error", "windows"
            ],
        "indent": ["error",
                4,
                {"SwitchCase": 1
                }
            ],
        "array-bracket-spacing": [
                2, "never"
            ],
        "block-scoped-var": 0,
        "brace-style": [
                2, "1tbs",
                {"allowSingleLine": true
                }
            ],
        "camelcase": 2,
        "comma-dangle": [
                2, "never"
            ],
        "comma-spacing": [
                2,
                {"before": false, "after": true
                }
            ],
        "comma-style": [
                2, "last"
            ],
        "complexity": [
                2,
                9
            ],
        "computed-property-spacing": [
                2, "never"
            ]
    }
}